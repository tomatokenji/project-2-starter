    <!-- <div class="col-md-4" id="profile_pic">profile picture</div> -->

    <div class="col-md-10 col-md-offset-1">
      <h2>Edit</h2>
<!-- my playground -->
      <table id="user" class="table table-bordered table-striped" style="clear: both">
        <tbody>
          <tr>
            <td width="35%">Name</td>
            <td width="65%"><a href="#" id="name" data-type="text" data-pk="1" data-title="Enter name" data-value=<%= user.name %> ><%= user.name %></a></td>
          </tr>

          <tr>
            <td width="35%">Email</td>
            <td width="65%"><a href="#" id="email" data-type="text" data-pk="1" data-title="Enter email" data-value=<%= user.email %> ></a></td>
          </tr>

          <tr>
            <td>About myself</td>
            <td><a href="#" id="description" data-type="textarea" data-pk="1" data-value = <%= user.briefDescription %>><%= user.briefDescription %></a></td>
          </tr>

          <tr>
            <td>Interests</td>
            <td><a href="#" id="interests" data-title="Select interests" data-type="select2" data-pk="1" data-value= <%= user.interests %> ><%= user.interests %></a></td>
          </tr>

        </tbody>
      </table>

<!-- my playground -->
    </div>

  </div>
</div>

